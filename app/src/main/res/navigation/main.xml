<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.groupe5.steamfav.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_gameDetails"
            app:destination="@id/gameDetails" />
    </fragment>
    <fragment
        android:id="@+id/gameDetails"
        android:name="com.groupe5.steamfav.ui.fragments.GameDetails"
        android:label="fragment_game_details"
        tools:layout="@layout/fragment_game_details" />
</navigation>