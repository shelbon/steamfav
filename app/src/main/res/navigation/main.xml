<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.groupe5.steamfav.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_gameDetails"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left"
            app:popEnterAnim="@anim/fui_slide_in_right"
            app:popExitAnim="@anim/fui_slide_out_left"
            app:destination="@id/gameDetails" />
        <action
            android:id="@+id/action_homeFragment_to_search_view"
            app:enterAnim="@anim/fui_slide_in_right"
            app:exitAnim="@anim/fui_slide_out_left"
            app:popEnterAnim="@anim/fui_slide_in_right"
            app:popExitAnim="@anim/fui_slide_out_left"
            app:destination="@id/search_view" />
    </fragment>
    <fragment
        android:id="@+id/gameDetails"
        android:name="com.groupe5.steamfav.ui.fragments.GameDetails"
        android:label="fragment_game_details"
        tools:layout="@layout/fragment_game_details" >
        <argument
            android:name="gameId"
            android:defaultValue="0L"
            app:argType="long" />
    </fragment>
    <activity
        android:id="@+id/search_view"
        android:name="com.groupe5.steamfav.ui.activity.SearchableActivity"
        android:label="search_view"
        tools:layout="@layout/activity_search">
        <argument android:name="searchQuery"
            android:defaultValue=""
            app:argType="string"/>
    </activity>
    <action android:id="@+id/action_global_gameDetails"
     app:destination="@id/gameDetails" />
</navigation>