<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Steamfav" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_400</item>
        <item name="colorPrimaryVariant">@color/black_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/purple_300</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Steamfav.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Steamfav.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.Steamfav.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>